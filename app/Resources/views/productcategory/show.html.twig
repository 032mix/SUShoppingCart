{% extends 'base.html.twig' %}

{% block body %}
    <div align="center">
        <h1>Productcategory</h1>

        <table>
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ productCategory.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ productCategory.name }}</td>
            </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('edit_productcategory_index') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('edit_productcategory_edit', { 'id': productCategory.id }) }}">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
{% endblock %}
