{% extends 'base.html.twig' %}

{% block body %}
    <h1>Productcategories list</h1>
<div align="center">
    <table class="table-bordered" style="min-width: 800px;">
        <thead>
            <tr>
                <th width="20px">Id</th>
                <th>Name</th>
                <th width="80px">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for productCategory in productCategories %}
            <tr>
                <td><a href="{{ path('edit_productcategory_show', { 'id': productCategory.id }) }}">{{ productCategory.id }}</a></td>
                <td>{{ productCategory.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('edit_productcategory_show', { 'id': productCategory.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('edit_productcategory_edit', { 'id': productCategory.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table><br>

    <ul>
        <h2><a href="{{ path('edit_productcategory_new') }}">Create a new Product Category</a></h2>
    </ul>
</div>
{% endblock %}
