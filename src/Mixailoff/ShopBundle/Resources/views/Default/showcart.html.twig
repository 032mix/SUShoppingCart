{% extends '::base.html.twig' %}
{% block title %}{{ user.username }}'s cart{% endblock %}

{% block body %}
    <h3>
        <div align="center">{{ user.username }}'s cart</div>
    </h3><br>
    {% if app.session.flashBag.has('success') %}
        <div align="center">
            {% for message in app.session.flashBag.get('success') %}
                <h3 style="color: green;">{{ message }}</h3>
            {% endfor %}
        </div>
        <br>
    {% endif %}
    {% if items %}
        <div align="center">
            <div style="max-width: 1024px;">
                <table class="table-bordered">
                    <thead>
                    <tr>
                        <th>Image</th>
                        <th>Title</th>
                        <th width="300px">Description</th>
                        <th width="100px">Price</th>
                        <th>Quantity</th>
                        <th width="80px">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in items %}
                        <tr>
                            <td align="center"><img src="/images/productimages/{{ product.product.image }}"
                                                    style="height: 50px"></td>
                            <td>{{ product.product.title }}</td>
                            <td>{{ product.product.description }}</td>
                            <td align="center">${{ product.product.price }}</td>
                            <td align="center">{{ product.quantity }}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('mix_s_product_display', {id: product.product.id}) }}">
                                            show
                                        </a>
                                    </li>
                                    <li>
                                        <a href="{{ path('mix_s_cart_removeproduct', {productId: product.id}) }}">remove</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <br>
            <a href="{{ path('mix_s_cart_checkout') }}">
                <button type="button" class="btn btn-success btn-lg">Checkout</button>
            </a>
            <a href="{{ path('mix_s_cart_clear') }}">
                <button type="button" class="btn btn-danger btn-lg">Clear Cart</button>
            </a>
        </div>
    {% else %}
        <br><br>
        <div align="center"><h3> Your Cart is empty!</h3></div>
    {% endif %}
    <br>
    <div align="center">
        <a href="{{ path('mix_s_inventory_display') }}">
            <button type="button" class="btn btn-info btn-lg">Inventory</button>
        </a>
    </div>
{% endblock %}
